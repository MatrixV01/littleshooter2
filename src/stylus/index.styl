@import 'nib'
*{
  font-family: Helvetica, Arial;
}
.game{
  position:relative;
  width:500px;
  height:500px;
  background:black;
  outline: none;
  overflow: hidden;
}
.intro{
  text-align: center;
  color:white;
  h1, h2{
    margin:auto;
  }
}
.ship{
  position:absolute;
  width:20px;
  height:23px;
  background-image:url("/assets/spaceShip.png");
  transition: transform 600ms;
}
.particle{
  position  : absolute;
  width     : 5px;
  height    : 5px;
  background: red;
}
.rocket {
  position:fixed;
  width : 6px;
  height: 10px;
  background:white;
}
.ouno{
  position: absolute;
  width: 20px;
  height : 20px;
  background-image:url("/assets/ouno.png");
}
.hud {
  .points {
    position: absolute;
    top: 0;
    right: 0;
    text-align:right;
    color:white;
  }
  .life{
    position: absolute;
    top: 0;
    left: 0;
    .ship{
      position: relative;
      display:inline-block;
      margin: 5px;
    }
  }
}
