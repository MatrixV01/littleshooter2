@import 'nib'
*{
  font-family: Helvetica, Arial;
}

.game{
  position  : relative;
  width     : 500px;
  height    : 500px;
  background: black;
  outline   : none;
  overflow  : hidden;
}
.intro{
  position: absolute;
  top     : 20%;
  width   : 100%;
  color   : white;
  text-align: center;
  text-transform: uppercase;

  h1, h2{
    margin:auto;
  }
  h2{
    font-size:80%;
    margin-top: 20px;
  }

  .ship{
    position    : absolute;
    top         : 400%;
    left        : 50%;
    margin-left : -10px; 
  }
}

.positionable {
  position: absolute;
  top     : 0;
  left    : 0;
}
.ship{
  width           : 20px;
  height          : 23px;
  background-image: url("../assets/spaceShip.png");
  z-index         : 3;
}
.particle{
  width     : 5px;
  height    : 5px;
  background: red;
}
.rocket-launcher {
  z-index: 1;
  .rocket {
    width : 6px;
    height: 10px;
    background:white;
  }
}
.ouno{
  width: 20px;
  height : 20px;
  background-image:url("../assets/ouno.png");
}

.ouno.flash {
  background-image : none;
  background:white;
}

.hud {
  .points {
    position: absolute;
    top: 0;
    right: 0;
    text-align:right;
    color:white;
  }
  .life{
    position: absolute;
    top: 0;
    left: 0;
    .ship{
      position: relative;
      display:inline-block;
      margin: 5px;
    }
  }
}

.button{
  border: 4px solid red;
  padding: 3px;
}
