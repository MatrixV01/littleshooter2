@import 'nib'
.game{
  position:relative;
  width:500px;
  height:500px;
  background:black;
  outline: none;
  overflow: hidden;
}
.ship{
  position:absolute;
  width:20px;
  height:23px;
  background-image:url("/assets/spaceShip.png");
  transition: transform 600ms;
}
.rocket {
  position:fixed;
  width : 6px;
  height: 10px;
  background:white;
}
.ouno{
  position: absolute;
  width: 20px;
  height : 20px;
  background-image:url("/assets/ouno.png");
}
.hud {
  .points {
    position: relative;
    top: 0;
    right: 0;
    text-align:right;
    color:white;

  }
}
